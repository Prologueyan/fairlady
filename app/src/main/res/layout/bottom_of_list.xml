<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_of_list"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp" />

    <LinearLayout
        android:id="@+id/song_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/song_image"
        android:layout_toStartOf="@+id/play_stop_bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:singleLine="true" />

        <TextView
            android:id="@+id/artist_name_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:singleLine="true" />
    </LinearLayout>


    <ImageView
        android:id="@+id/play_stop_bottom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/next_bottom"
        android:background="@drawable/play" />

    <ImageView
        android:id="@+id/next_bottom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/icon_next" />
</RelativeLayout>
