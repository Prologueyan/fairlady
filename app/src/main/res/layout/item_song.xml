<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white">


    <View
        android:layout_alignParentStart="true"
        android:id="@+id/play_indicator"
        android:layout_width="4dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:background="@color/holo_blue_dark"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/play_indicator"
        android:layout_toStartOf="@+id/iv_add_to_playlist"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_songname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="22sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="@color/black_translucence2" />


    </LinearLayout>

    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/iv_add_to_playlist"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/add_to_playlist" />


</RelativeLayout>
